<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".MainActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Expense Tracker"
            android:textAlignment="center"
            android:textColor="@color/magenta"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042" />

        <Button
            android:id="@+id/add_entry"
            android:layout_width="187dp"
            android:layout_height="56dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="152dp"
            android:fontFamily="@font/bungee"
            android:onClick="add_expense"
            android:text="Add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />


        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="D.R.0.0.V"
            android:textAlignment="center"
            android:textColor="@color/magenta"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_entry"
            app:layout_constraintVertical_bias="0.384" />

        <Button
            android:id="@+id/delete_entry"
            android:layout_width="153dp"
            android:layout_height="48dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/bungee"
            android:onClick="delete"
            android:text="Delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PaymentdelET" />

        <Button
            android:id="@+id/show_entry"
            android:layout_width="217dp"
            android:layout_height="55dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/bungee"
            android:onClick="viewdata"
            android:text="Show History"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_entry" />

        <EditText
            android:id="@+id/PaymentET"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Enter payment Name"
            android:inputType="text"
            android:textColor="@color/magenta"
            android:textColorHint="@color/magenta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162" />

        <EditText
            android:id="@+id/AmountET"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Enter payment amount"
            android:inputType="numberDecimal"
            android:textColor="@color/magenta"
            android:textColorHint="@color/magenta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.254" />

        <EditText
            android:id="@+id/PaymentdelET"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Enter payment Name"
            android:inputType="text"
            android:textColor="@color/magenta"
            android:textColorHint="@color/magenta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <TextView
            android:id="@+id/del_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Delete Expense"
            android:textAlignment="center"
            android:textColor="@color/magenta"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.485" />

</androidx.constraintlayout.widget.ConstraintLayout>